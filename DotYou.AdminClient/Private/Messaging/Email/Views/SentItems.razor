@code {
    enum View
    {
        Inbox = 0,
        Circles = 1,
        Groups = 2,
        Verified = 3,
        External = 4
    }

    private IList<Message> _messages = new List<Message>();
    private View _currentView = View.Inbox;

    private string FormatBody(Message message)
    {
        var body = message.Body.Length > 250 ? $"{message.Body.Substring(0, 300)}..." : message.Body;
        return body;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var response = await _email.GetMessageList(MessageFolder.Sent, PageOptions.Default);
            var page = response.Content;
            _messages = page.Results.OrderByDescending(m => m.ReceivedTimestamp).ToList();
            StateHasChanged();
        }

    }
}
