@page "/private/demodata"
@inject NavBarLeftInjectableMenu menu
@inject IDemoDataClient _demoDataClient
@menu.SetContent(null, false);

<ContentMain>
    <PageTitle Title="Setup sample data"/>
    <Row>
        <h5 style="color:red">This might delete existing data.</h5>
        <Column Classes="col.sm._10">
            <div style="width:150px">
                <Button Size="ButtonSize.Normal" @onclick="@importContacts">Import Contacts</Button>
            </div>
        </Column>
    </Row>
</ContentMain>

@code {

    private async void importContacts()
    {
        await _demoDataClient.ImportContacts();
    }
}
